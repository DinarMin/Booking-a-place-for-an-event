{
  "compilerOptions": {
    "target": "es2016",
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "./src",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["."],
  "exclude": ["dist", "node_modules"]
}
